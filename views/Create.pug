doctype html
html
    head
        title="Creation Page"
        link(href="https://bootswatch.com/3/cosmo/bootstrap.min.css",type="text/css",rel="stylesheet")
        meta(name="viewport",content="width=device-width,initial-scale=-1")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")

    body
        nav.navbar-default
            .container
                .navbar-header
                    a(href="/" class='navbar-brand') CRUD
                    button(class="navbar-toggle" data-toggle="collapse" data-target="#myDiv")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                div(class="navbar-collapse collapse" id="myDiv")
                    ul.nav.navbar-nav
                        li
                            a(href="/") Products
                        li
                            a(href="/create") Create
        div(class="container")
            .row
                .col-xs-12
                    h2.jumbotron.text-center Welcome to Creation Page
        .container
            .row
                .col-md-6.col-md-offset-3.well
                    form(action="/create" method="POST")
                        .form-group
                            label  Name:
                            input(type="text" placeholder="Name" name="name" autofocus required class='form-control')
                        .form-group
                            label  Email:
                            input(type="email" placeholder="someone@example.com" name='email' required class='form-control')
                        .form-group
                            label Phone:
                            input(type='text' placeholder="9182918291" name="phone" required class="form-control")
                        .form-group
                            label Description:
                            br
                            textarea(name="description", cols="30", rows="10" class="form-control" maxlength="1000")
                        .form-group
                            input(type="submit" class="btn btn-md btn-success" value="submit")
                            input(type="reset" class="btn btn-md btn-danger pull-right" value="clear")





        